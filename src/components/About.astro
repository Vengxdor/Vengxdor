---
import { Image } from "astro:assets";
import TabsAbout from "./TabsAbout";
---
<section id="about" class="py-32 ">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center gap-12">
      <div class="md:w-1/3 relative">
        <div class="w-64 h-64 md:w-80 md:h-80 rounded-full overflow-hidden border-4 border-accent relative z-10 mx-auto">
          <Image
            src="/author2.webp"
            alt="Steven Fernandez"
            width={320}
            height={320}
            class="object-cover w-full h-full"
          />
        </div>
        <div class="absolute inset-0 bg-accent rounded-full blur-3xl opacity-20 -z-10"></div>
      </div>
      <div class="md:w-2/3">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 flex items-center gap-3">
          <span class="text-accent">About</span> Me
        </h2>
        <TabsAbout client:load/>
      </div>
    </div>
  </div>
</section>
