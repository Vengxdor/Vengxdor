---
import { Button } from "./ui/button";
---

<section id="contact" class="container mx-auto px-4 py-20">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Get In Touch</h2>
      <p class="text-white/70 max-w-2xl mx-auto">
        Interested in working together? Feel free to reach out to me through the form below or connect with me on
        social media.
      </p>
    </div>

    <div class="max-w-2xl mx-auto">
      <form class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-2">
            <label for="name" class="text-white/80 block">
              Name
            </label>
            <input
              type="text"
              id="name"
              class="w-full px-4 py-3 bg-black/40 border border-white/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
              placeholder="Your name"
            />
          </div>
          <div class="space-y-2">
            <label for="email" class="text-white/80 block">
              Email
            </label>
            <input
              type="email"
              id="email"
              class="w-full px-4 py-3 bg-black/40 border border-white/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
              placeholder="Your email"
            />
          </div>
        </div>
        <div class="space-y-2">
          <label for="subject" class="text-white/80 block">
            Subject
          </label>
          <input
            type="text"
            id="subject"
            class="w-full px-4 py-3 bg-black/40 border border-white/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
            placeholder="Subject"
          />
        </div>
        <div class="space-y-2">
          <label for="message" class="text-white/80 block">
            Message
          </label>
          <textarea
            id="message"
            rows={6}
            class="w-full px-4 py-3 bg-black/40 border border-white/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent resize-none"
            placeholder="Your message"
          ></textarea>
        </div>
        <Button className="w-full bg-purple-600 hover:bg-purple-700 text-white py-3">Send Message</Button>
      </form>
    </div>
  </section>