---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.tsx';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class='dark' lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Front-end developer for people who need a functional and attractive project." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<div class='mx-auto w-11/12 pb-8 md:w-10/12 lg:max-w-[900px]' id="app">
			<Header client:load/>
			<slot />
			<Footer />
		</div>
	</body>
</html>
